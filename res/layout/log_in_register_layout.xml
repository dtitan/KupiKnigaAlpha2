<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ET_lir_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:hint="е-mail" />

        <EditText
            android:id="@+id/ET_lir_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="лозинка"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/BTN_lir_log_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Логирај се"
         />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="5" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|bottom"
            android:text="Суште се немаш регистрирано?" />

        <Button
            android:id="@+id/BTN_lir_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Регистрирај се"
         />
    </LinearLayout>

</LinearLayout>