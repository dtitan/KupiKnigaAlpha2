<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Препорачуваме" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="37" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/slika1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika5"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika6"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/slika10"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:onClick="slikaClick"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical"
        android:onClick="onClickKnigaNaDenot"
        >
        
        <TextView 
            android:id="@+id/tv_main_naslovknd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"
            android:text="Nekoj Naslov Za Kniga"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_main_knd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_weight="35"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_main_kndopis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="65"
                android:gravity="center_vertical"
                android:text="Најдобрите приказни од Ориентот. Класично дело со интриги и магија" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_kategorii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="categoriesClick"
            android:text="Категории" />
    </LinearLayout>

</LinearLayout>